AT_SETUP([Input from command line])
AT_KEYWORDS([gdbmtool])

AT_CHECK([
gtload t.db < /dev/null
gdbmtool t.db status \; version | sed 's/^GDBM version.*/GDBM version/'
],
[0],
[Database file: t.db
Database is not open
define key string
define content string
GDBM version 
])
AT_CLEANUP
